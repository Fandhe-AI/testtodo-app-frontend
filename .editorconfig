root = true

[*]
quote_type = double
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,mdc,yml,yaml}]
trim_trailing_whitespace = false
max_line_length = unset

[LICENSE.txt]
insert_final_newline = unset

[Makefile]
indent_style = tab
